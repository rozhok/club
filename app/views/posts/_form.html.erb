<%= form_with model: @post, class: "w-full space-y-6 p-6 bg-base-200 rounded-lg shadow-lg" do |f| %>
  <h2 class="text-xl font-bold"><%= @post.created_at ? "Редагувати допис" : "Новий допис" %></h2>
  
  <div class="form-control w-full">
    <div class="bg-base-100 rounded-lg">
      <%= f.text_field :title, class: "w-full min-w-full" %>
    </div>
    <div class="bg-base-100 rounded-lg">
      <%= f.rich_textarea :content, class: "w-full min-w-full h-full" %>
    </div>
  </div>

  <div class="form-control mt-6">
    <% if @post.created_at %>
      <%= f.submit "Зберегти", class: "btn btn-primary btn-wide" %>
    <% else %>
      <div class="flex justify-between items-center">
        <%= f.submit "Опублікувати", class: "btn btn-primary" %>
        <%= link_to "Скасувати", :back, class: "btn btn-ghost" %>
      </div>
    <% end %>
  </div>
<% end %>