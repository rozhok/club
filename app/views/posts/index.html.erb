<div class="container mx-auto p-4">
  <%= link_to "Додати пост", new_post_path, class: "btn btn-primary mb-4" %>

  <div class="space-y-4">
    <% @posts.each do |post| %>
      <div class="p-4 border rounded-lg bg-base-200">
        <article class="prose">
          <h1><%= link_to post.title, post_path(post) %></h1>
          <%= post.content %>
        </article>
      </div>
    <% end %>
  </div>
</div>