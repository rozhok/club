<div class="mx-auto my-6 p-4 rounded-lg shadow-sm" id="sign-in">
  <h1 class="text-2xl font-bold text-center mb-6">Вхід</h1>

  <%= form_with(url: sign_in_path, class: "space-y-4") do |form| %>
    <div class="form-control">
      <%= form.label :email, class: "label" do %>
        <span class="label-text">Пошта</span>
      <% end %>
      <%= form.email_field :email, value: params[:email_hint], required: true, autofocus: true, autocomplete: "email", class: "input input-lg input-bordered w-full validator" %>
    </div>

    <% if alert.present? %>
      <div class="form-control">
        <div role="alert" class="alert alert-error alert-outline">
          <%= inline_svg_tag "icons/error.svg" %>
          <span><%= alert %></span>
        </div>
      </div>
    <% end %>

    <div class="form-control mt-6">
      <%= form.submit "Увійти", class: "btn btn-primary btn-lg w-full" %>
    </div>
  <% end %>

  <div class="divider">або</div>

  <div class="flex justify-center text-sm mt-4">
    <%= link_to "Зареєструватись", sign_up_path, class: "link" %>
  </div>

  <% if Rails.env.production? %>
    <div class="divider">або</div>

    <div class="flex justify-center text-sm mt-4">
      <script async src="https://telegram.org/js/telegram-widget.js?22" data-telegram-login="<%= ENV.fetch("TG_BOT_NAME") %>" data-size="large" data-radius="0" data-auth-url="<%= "#{ENV.fetch("BASE_URL")}/tg/auth_callback" %>" data-request-access="write"></script>
    </div>
  <% end %>
</div>