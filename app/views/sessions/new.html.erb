<% if notice.present? %>
  <div class="alert alert-success shadow-lg mb-4">
    <div>
      <svg xmlns="http://www.w3.org/2000/svg" class="stroke-current flex-shrink-0 h-6 w-6" fill="none" viewBox="0 0 24 24">
        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12l2 2 4-4m6 2a9 9 0 11-18 0 9 9 0 0118 0z"/>
      </svg>
      <span><%= notice %></span>
    </div>
  </div>
<% end %>

<% if alert.present? %>
  <div class="alert alert-error shadow-lg mb-4">
    <div>
      <svg xmlns="http://www.w3.org/2000/svg" class="stroke-current flex-shrink-0 h-6 w-6" fill="none" viewBox="0 0 24 24">
        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M10 14l2-2m0 0l2-2m-2 2l-2-2m2 2l2 2m7-2a9 9 0 11-18 0 9 9 0 0118 0z"/>
      </svg>
      <span><%= alert %></span>
    </div>
  </div>
<% end %>

<div class="max-w-md mx-auto my-8 p-6 bg-base-200 rounded-lg shadow-lg">
  <h1 class="text-2xl font-bold text-center mb-6">Вхід</h1>

  <%= form_with(url: sign_in_path, class: "space-y-4") do |form| %>
    <div class="form-control">
      <%= form.label :email, class: "label" do %>
        <span class="label-text">Е-пошта</span>
      <% end %>
      <%= form.email_field :email, value: params[:email_hint], required: true, autofocus: true, autocomplete: "email", class: "input input-bordered w-full" %>
    </div>

    <div class="form-control">
      <%= form.label :password, class: "label" do %>
        <span class="label-text">Пароль</span>
      <% end %>
      <%= form.password_field :password, required: true, autocomplete: "current-password", class: "input input-bordered w-full" %>
    </div>

    <div class="form-control mt-6">
      <%= form.submit "Увійти", class: "btn btn-primary w-full" %>
    </div>
  <% end %>

  <div class="divider">або</div>

  <div class="flex justify-between text-sm mt-4">
    <%= link_to "Зареєструватись", sign_up_path, class: "link link-hover" %>
    <%= link_to "Забули пароль?", new_identity_password_reset_path, class: "link link-hover" %>
  </div>
</div>