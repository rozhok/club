<div class="max-w-md mx-auto my-8 p-6 rounded-lg shadow-sm">
  <h1 class="text-2xl font-bold text-center mb-6">Вхід</h1>

  <%= form_with(url: sign_in_path, class: "space-y-4") do |form| %>
    <div class="form-control">
      <%= form.label :email, class: "label" do %>
        <span class="label-text">Пошта</span>
      <% end %>
      <%= form.email_field :email, value: params[:email_hint], required: true, autofocus: true, autocomplete: "email", class: "input input-lg input-bordered w-full" %>
    </div>

    <div class="form-control">
      <%= form.label :password, class: "label" do %>
        <span class="label-text">Пароль</span>
      <% end %>
      <%= form.password_field :password, required: true, autocomplete: "current-password", class: "input input-lg input-bordered w-full" %>
    </div>

    <% if alert.present? %>
      <div class="form-control">
        <div role="alert" class="alert alert-error alert-outline">
          <svg xmlns="http://www.w3.org/2000/svg" class="h-6 w-6 shrink-0 stroke-current" fill="none" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M10 14l2-2m0 0l2-2m-2 2l-2-2m2 2l2 2m7-2a9 9 0 11-18 0 9 9 0 0118 0z"/>
          </svg>
          <span><%= alert %></span>
        </div>
      </div>
    <% end %>

    <div class="form-control mt-6">
      <%= form.submit "Увійти", class: "btn btn-primary btn-lg w-full" %>
    </div>
  <% end %>

  <div class="divider">або</div>

  <div class="flex justify-between text-sm mt-4">
    <%= link_to "Зареєструватись", sign_up_path, class: "link" %>
    <%= link_to "Забули пароль?", new_identity_password_reset_path, class: "link" %>
  </div>
</div>