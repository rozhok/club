<div class="card card-border shadow-sm mb-8 <%= current_page?(profile_path) ? "" : "bg-base-200" %>">
  <div class="card-body">
    <div class="flex flex-row gap-4">

      <div class="avatar">
        <div class="w-16 h-16 rounded-full">
          <% if user.avatar.attached? %>
            <%= image_tag cdn_image_url(user.avatar.variant(resize_to_limit: [160, 160]).processed) %>
          <% else %>
          <% end %>
        </div>
      </div>

      <div class="flex flex-col grow gap-2">

        <div class="flex justify-between items-center gap-2">
