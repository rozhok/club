<h1>Sign Up</h1>

<%= form_with(model: @user, url: signup_path) do |f| %>
  <% if @user.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@user.errors.count, "error") %> prohibited this user from being saved:</h2>
      <ul>
        <% @user.errors.full_messages.each do |message| %>
          <li><%= message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>


  <fieldset class="fieldset bg-base-200 border-base-300 rounded-box w-xs border p-4">
    <legend class="fieldset-legend">Реєстрація</legend>

    <%= f.label :username, "Ім'я", class: "label" %>
    <%= f.text_field :username, class: 'input', placeholder: "є-пошта" %>

    <div class="field">
      <%= f.label :password, "Пароль", class: "label" %>
      <%= f.password_field :password, class: 'input', placeholder: "Пароль" %>
    </div>

    <%= f.submit "Зарєеструватись", class: "btn btn-neutral mt-4" %>
  </fieldset>
<% end %>
